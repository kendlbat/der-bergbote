---
import { Image } from "astro:assets";
import idleMenuBackdrop from "@/assets/backdrops/idlemenu.gif";
import bergboteText from "@/assets/bergbote_nologo.gif";
---

<a href="/discovery" class="relative w-full h-full">
    <Image
        src={idleMenuBackdrop}
        format="gif"
        quality="max"
        alt="Bergbote Background"
        class="w-full min-w-full h-full object-cover z-0 object-bottom"
    />
    <Image
        src={bergboteText}
        alt="Bergbote"
        class="h-[14em] object-contain absolute top-[1em] left-1/2 transform -translate-x-1/2"
    />
    <div class="absolute bottom-[2.5em] w-full text-center text-white z-10">
        <h1 class="pixelify text-3xl font-bold">Click anywhere to begin</h1>
    </div>
</a>
