---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    i: string;
}

const { i } = Astro.props;
if (!i.match(/^[a-z]+$/)) throw new Error(`Invalid icon "${i}"`);
const path = "/src/assets/icons/" + i + ".png";

const icons = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/icons/*.png"
);

if (!icons[path]) throw new Error(`Icon not found "${i}"`);
---

<Image src={icons[path]()} class="w-[80px] h-[80px]" alt={i} />
