---
import { SignIn } from "@/components/react/auth/auth-buttons";
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/ui/card";
import RequireAuth from "./RequireAuth.astro";
import bergboteLogoText from "@/assets/bergbote.gif";
import { Image } from "astro:assets";
---

<div class="flex flex-row min-h-screen justify-center items-center">
    <Card className="w-1/2">
        <CardHeader>
            <CardTitle>
                <Image
                    src={bergboteLogoText}
                    class="w-full"
                    format="gif"
                    alt="Der Bergbote"
                />
            </CardTitle>
        </CardHeader>
        <CardContent />
        <CardFooter className="flex flex-col w-full justify-between">
            <RequireAuth>
                <Fragment slot="fallback">
                    <SignIn client:visible />
                </Fragment>
                Login erfolgreich!
            </RequireAuth>
        </CardFooter>
    </Card>
</div>
