---
import type { ImageMetadata } from "astro";
import chest from "@/assets/icons/chest.png";
import { Image } from "astro:assets";

interface Props {
    i: string;
}

const { i } = Astro.props;

const chestImages = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/chests/*.png"
);

const ci = chestImages[`/src/assets/chests/${i}.png`];

const chestImage = ci ? (await ci()).default : chest;
---

<Image
    src={chestImage}
    quality="max"
    class="w-full h-full object-contain"
    alt="Chest"
/>
