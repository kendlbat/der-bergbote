{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": [
            "vite/client",
            "vite-plugin-vue-layouts/client",
            "vite-plugin-pwa/client"
        ]
    }
}
